<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA96FF"
    tools:context=".controller.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="391dp"
        android:layout_height="818dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/pikachu_noir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:src="@drawable/pikachu"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Quel est ce pokÃ©mon ?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reponseA"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:text="racaillou"
        app:layout_constraintBottom_toTopOf="@+id/reponseC"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reponseB"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:text="bulbizar"
        app:layout_constraintBottom_toTopOf="@+id/reponseD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reponseA" />

    <Button
        android:id="@+id/reponseC"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:text="metamorph"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reponseD"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:text="Pikachu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reponseC" />

</androidx.constraintlayout.widget.ConstraintLayout>